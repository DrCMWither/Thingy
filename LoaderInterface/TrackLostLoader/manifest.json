{
  "manifest_version": 3,
  "name": "Track Lost Error Loader",
  "version": "1.2",
  "description": "Displays 'track lost' animation on 4xx/5xx errors.",
  "author": "Lilia C M Wither",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/Title-tracklost.webp",
        "assets/track_fail.wav",
        "assets/res_fail_full.ogg",
        "assets/res_fail_loop.ogg",
        "assets/end_mid_f.png",
        "assets/clear_fail.png",
        "assets/pausebg.png",
        "assets/stripe_top.png",
        "assets/stripe_bottom.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}